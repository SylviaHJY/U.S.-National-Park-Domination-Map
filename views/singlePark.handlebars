<div class="park_information">
  <h1 id="park_head"><a
      href="{{park.linkInformation}}"
      id="park_url"
      target="_blank"
    >{{park.parkName}}</a></h1>
  <img src="{{park.park_picture}}" alt="{{park.parkName}}" />
  <p id="park_description"> Park introduction: {{park.introduction}}</p>
  <p id="park_address">Park address:
    <a href="{{park.map}}" target="_blank"> {{park.address}}</a></p>
  <ul class="contacts">
    {{#each park.contacts}}
      <li>
        <p class="phone">Phone Number: {{this.phone}}</p>
        <p class="phone">Type: {{this.type}}</p>
      </li>
    {{/each}}
  </ul>

  <ul class="fee">
    {{#each park.entranceFees}}
      <li>
        <p class="fee">Cost: {{this.cost}}</p>
        <p class="fee">Description: {{this.description}}</p>
        <p class="fee">Title: {{this.title}}</p>
      </li>
    {{/each}}
  </ul>
  <p id="park_rating">Overall Rating: {{park.overallRating}}</p>

  {{#if park.hasReviews}}

    <h2>Reviews</h2>
    {{#each park.reviews}}
      <div class="reviews" name = "{{this._id}}">
        <section class="review-info">
          <p class="review-id">{{this._id}}</p>
          <p class="review-title">Title: {{this.title}}</p>
          <p class="review-username">Author: {{this.userName}}</p>
          <p class="review-rating">Rating: {{this.rating}}</p>
          <p class="review-date">Date: {{this.lastUpdatedTime}}</p>
        </section>
        <section class="review-content">
          <p class="review">Review: {{this.content}}</p>
        </section>
        {{#if this.liked}}
        <div class="review-ui">
          <button type="button" class="reply" >reply</button>
          <button type="button" class="unlike" >unlike</button>
        </div>
          <div class="likes" > Liked!</div>
        {{else}}
        <div class="review-ui">
          <button type="button" class="reply" >reply</button>
          <button type="button" class="like" >Like</button>
        </div>
        {{/if}}
      {{#if this.hasComments}}
        {{#each this.comments}}
          <div class="comments" name = "{{this._id}}">
            <section class="comment-info">
              <p class="comment-username">Reply from: {{this.userName}}</p>
            </section>
            <section class="comment-content">
              <p class="comment">content: {{this.content}}</p>
            </section>
          </div>
        {{/each}}
      {{/if}}

      
      </div>

    {{/each}}
  {{/if}}


  {{#if login}}
  <div class="leaveReview" id = "review">
    <form name = "postReview" id = "postReview">
      <label for="title">Title</label>
      <input type="text" name="title" id="title" />
      <label for="content">Content</label>
      <textarea name="content" id="content" cols="30" rows="10"></textarea>
      <label for="rating">Rating</label>
      <input type="number" name="rating" id="rating"  min="1" max="5"/>
      <input type="submit" value="Submit" />
    </form>
    {{else}}
    <button id="login">Login to leave a review</button>
  </div>
  {{/if}}
</div>
<a href="/" class = "backToMain"> Main Page</a>
